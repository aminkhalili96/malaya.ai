# Tavily API Key (optional - for real-time web search)
TAVILY_API_KEY=

# LangChain Tracing (optional - for debugging)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_ENDPOINT="https://api.smith.langchain.com"
LANGCHAIN_API_KEY=

# Observability
LOG_LEVEL=INFO
LOG_NAME=malaya

# Streaming chat (frontend)
VITE_STREAMING_CHAT=true
VITE_HISTORY_LIMIT=8

# Analytics toggle (frontend)
VITE_ANALYTICS_DISABLED=false
VITE_API_KEY=

# Optional error monitoring
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_ENVIRONMENT=development

# API keys (backend)
API_KEYS_REQUIRED=false
# MALAYA_API_KEYS expects JSON: [{"key":"dev-key","role":"admin","limits":{"chat":"60/minute"}}]
MALAYA_API_KEYS=[]

# Tool cache TTL (seconds)
MCP_TOOL_CACHE_TTL=600

# Offline mode (disable web + cloud LLM)
OFFLINE_MODE=false

# SQLite storage path
MALAYA_DB_PATH=data/malaya.db

# Runtime config (admin console writes here)
MALAYA_RUNTIME_CONFIG=config.runtime.yaml

# Attachment limits (characters)
MAX_ATTACHMENT_CHARS=12000
MAX_ATTACHMENTS=6

# Chat history limit (backend)
CHAT_HISTORY_LIMIT=10
